<%- include('../components/headComp') %> 

 
      
   <div id="main">
      

      <div class="container py-4">
         <% if(messages.fail) { %>
            <div class="alert alert-danger alert-dismissible fade show animate__animated animate__flipInX" role="alert">
              <strong><i class="fas fa-exclamation-triangle me-2"></i></strong> <%- messages.fail %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
         <% } %>
         
         <div class="row">
            <div class="animate__animated animate__flipInX">
               <p class="float-start display-3">Edit Kabupaten <%= nama %> </p>
            </div>
         </div>

         <div class="row mb-5">
            <form class="form-floating" action="/kabupaten/update" method="post">
               <div class="form-floating mb-3">
                  <input type="hidden" class="form-control" name="id" id="floatingInput" value="<%= id %>" placeholder="title">
                </div>
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" name="nama" id="floatingInput" value="<%= nama %>" placeholder="title">
                  <label for="floatingInput">Nama</label>
                </div>
               
                <div class="form-floating mb-3">
                  <select class="form-select" name="provinsi" id="floatingSelect">
                    <option value="<%= provinsiID %>" selected><%= provinsi %></option>
                    <option value="1">Sumatera utara</option>
                    <option value="2">Sumatera selatan</option>
                    <option value="3">Aceh</option>
                  </select>
                  <label for="floatingSelect">provinsi</label>
                </div>
                <div class="form-floating mb-3">
                  <input type="date" class="form-control" name="diresmikan" id="floatingInput" value="<%= diresmikan %>" placeholder="title">
                  <label for="floatingInput">diresmikan </label>
                </div>
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" name="photo" id="floatingInput" value="<%= photo %>" placeholder="title">
                  <label for="floatingInput">photo </label>
                </div>

               <a href="/" class="btn btn-info float-start text-white mt-3"><i class="fas fa-arrow-left"></i>&nbsp; Back</a>
               <button type="submit" class="btn btn-primary float-end mt-3"><i class="fas fa-plus"></i>&nbsp; Edit</button>
             </form>
         </div>
      </div>

      <%- include('../components/footer') %> 
   </div>
</body>
</html>